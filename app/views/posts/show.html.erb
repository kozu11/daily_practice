<div class="container mt-5">
    <div class="row">
        <div class="col-lg-5 mx-auto">
            
            <h3>今日の詳細</h3>
            
            <p>良かった点</p>
            <%= @post.title %>
            <P>反省点</p>
            <%= @post.body %><br>
            <div class="btn">
                <%= link_to "削除", post_path(@post.id), method: :delete, class: "btn btn-outline-danger" %>
                <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-outline-primary" %>
                <%= link_to "一覧へ", posts_path, class: "btn btn-outline-info" %>
            </div>
        </div>
    </div>
</div>