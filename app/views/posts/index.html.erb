<% if @post.errors.any? %>
<%= @post.errors.count %>件のエラーが発生しました<br>
<% @post.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-4 p-0">
       <%= render 'posts/new', post: @post %>
    </div>
    
    <div class="col-lg-8">
      
    <h3>私の毎日</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>良かった点</th>
          <th>反省する点</th>
          <th>image</th>
          <th></th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= attachment_image_tag post, :image, :fill, 30, 30, format: "jpg" %></td>
          <td><%= link_to "詳細へ", post_path(post.id) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>

